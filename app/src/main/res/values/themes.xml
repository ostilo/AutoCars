    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/teal_200</item>


        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">#ce000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbarStyle" >
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="BoldText" parent="android:TextAppearance">
        <item name="fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">monospace</item>
    </style>

