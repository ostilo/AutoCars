<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="@dimen/fab_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/fab_margin"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/card_parent"
                app:cardCornerRadius="@dimen/fab_margin"
                android:layout_height="200dp">
                <RelativeLayout
                    android:id="@+id/search_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/full_scroll_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/show_card" />
                    <TextView
                        android:id="@+id/full_car_char"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:alpha="0.2"

                        android:background="@color/purple_700"
                        android:gravity="center"
                        android:text="NIKE"
                        android:textColor="@color/black"
                        android:textSize="100sp"
                        android:textStyle="italic" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="invisible"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:background="@drawable/favourite_bg"
                    android:gravity="end"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:tint="@color/purple_200"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </FrameLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="@dimen/medium"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/full_name"
                   android:layout_width="wrap_content"
                   android:text="Air Jordan 1 Mid"
                   android:layout_weight="1"
                   android:textSize="@dimen/fab_margin"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   />
               <ImageView
                   android:id="@+id/favorite1"
                   android:layout_width="wrap_content"
                   android:layout_gravity="start"
                   android:gravity="end"
                   android:tint="@color/black"
                   android:background="@color/white"
                   android:src="@drawable/ic_baseline_favorite_border_244"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:src="@drawable/ic_baseline_star_rate_24"
                   android:tint="@color/purple_5001"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/grade_score"
                   android:layout_width="wrap_content"
                   android:text="(5.0)"
                   android:textSize="@dimen/fab_margin"
                   android:layout_height="wrap_content"
                   />
           </LinearLayout>
           <TextView
               android:id="@+id/car_year"
               android:layout_width="wrap_content"
               android:text="NIKE"
               android:textSize="@dimen/fab_margin"
               android:layout_height="wrap_content"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="$115.00"
                   android:layout_weight="1"
                   android:textSize="@dimen/fab_margin"
                   android:id="@+id/new_price_sale"
                   android:textStyle="bold"
                   android:padding="@dimen/small"
                   android:layout_height="wrap_content"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:text="$115.00"
                   android:padding="@dimen/small"
                   android:id="@+id/old_price_sale"
                   android:layout_weight="1"
                   android:textSize="@dimen/fab_margin"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   />
               <com.google.android.material.floatingactionbutton.FloatingActionButton
                   android:id="@+id/float_add"
                   android:layout_width="wrap_content"
                   app:fabSize="mini"
                   android:tint="@color/purple_5001"
                   android:src="@android:drawable/ic_input_add"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>